<resources>

    <!-- Base Dark Theme -->
    <style name="PowerSwitchWearThemeBase.Dark" parent="android:Theme.DeviceDefault">
        <!-- material design -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryLight">@color/primaryColor_light</item>
        <item name="colorAccent">#FF999999</item>
        <item name="android:windowBackground">@color/black</item>

        <!-- custom views -->
        <item name="dialog_bottomBar_next_color">@color/textColorPrimary</item>
        <item name="button_backgroundDrawable">@drawable/button_shape_selector_dark</item>
        <item name="cardview_backgroundColor">@color/cardview_background</item>

        <!-- text color -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondaryInverse">@color/textColorSecondaryInverse</item>
    </style>

    <!-- Base Light Theme -->
    <style name="PowerSwitchWearThemeBase.Light" parent="android:Theme.DeviceDefault.Light">
        <!-- material design -->
        <item name="colorPrimary">@color/primaryColorInverse</item>
        <item name="colorPrimaryLight">@color/primaryColor_lightInverse</item>
        <item name="colorAccent">#FF333333</item>
        <item name="android:windowBackground">@color/windowBackgroundColorInverse</item>

        <!-- custom views -->
        <item name="dialog_bottomBar_next_color">@color/textColorPrimaryInverse</item>
        <item name="button_backgroundDrawable">@drawable/button_shape_selector_light</item>
        <item name="cardview_backgroundColor">@color/cardview_backgroundInverse</item>

        <!-- text color -->
        <item name="android:textColorPrimary">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryInverse</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimary</item>
        <item name="android:textColorSecondaryInverse">@color/textColorSecondary</item>
    </style>

    <!-- Base Dark Blue -->
    <style name="PowerSwitchWearThemeBase.Dark.Blue" parent="PowerSwitchWearThemeBase.Dark">
        <item name="colorAccent">@color/color_light_blue_a700</item>
        <item name="android:textColorLink">@color/color_light_blue_a700</item>
    </style>

    <!-- Base Dark Red -->
    <style name="PowerSwitchWearThemeBase.Dark.Red" parent="PowerSwitchWearThemeBase.Dark">
        <item name="colorAccent">@color/color_red_a700</item>
        <item name="android:textColorLink">@color/color_red_a700</item>
    </style>

    <!-- Base Light Blue -->
    <style name="PowerSwitchWearThemeBase.Light.Blue" parent="PowerSwitchWearThemeBase.Light">
        <item name="colorAccent">@color/color_light_blue_a700</item>
        <item name="android:textColorLink">@color/color_light_blue_a700</item>
    </style>

    <!-- Base Light Red -->
    <style name="PowerSwitchWearThemeBase.Light.Red" parent="PowerSwitchWearThemeBase.Light">
        <item name="colorAccent">@color/color_red_a700</item>
        <item name="android:textColorLink">@color/color_red_a700</item>
    </style>

    <!-- Themes -->
    <style name="PowerSwitchWearTheme.Dark.Blue" parent="PowerSwitchWearThemeBase.Dark.Blue"/>

    <style name="PowerSwitchWearTheme.Dark.Red" parent="PowerSwitchWearThemeBase.Dark.Red"/>

    <style name="PowerSwitchWearTheme.Light.Blue" parent="PowerSwitchWearThemeBase.Light.Blue"/>

    <style name="PowerSwitchWearTheme.Light.Red" parent="PowerSwitchWearThemeBase.Light.Red"/>

</resources>