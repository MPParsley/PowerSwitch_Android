<resources>

    <!-- Base Dark Theme -->
    <style name="PowerSwitchThemeBase.Dark" parent="MaterialDrawerTheme">
        <!-- material design -->
        <!-- MaterialDrawer -->
        <!-- ...and here we setting appcompat’s color theming attrs -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryLight">@color/primaryColor_light</item>
        <item name="colorPrimaryDark">@color/primaryColor_dark</item>
        <item name="colorAccent">#FF999999</item>
        <item name="android:windowBackground">@color/windowBackgroundInverse</item>
        <item name="android:colorBackground">@color/windowBackground</item>

        <!-- custom views -->
        <item name="dialog_bottomBar_next_color">@color/textColorPrimary</item>
        <item name="button_backgroundDrawable">@drawable/button_shape_selector_dark</item>
        <item name="cardview_backgroundColor">@color/cardview_background</item>

        <!-- text color -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondaryInverse">@color/textColorSecondaryInverse</item>

        <!-- About Libraries -->
        <item name="about_libraries_window_background">@color/windowBackground</item>
        <item name="about_libraries_card">@color/cardview_background</item>
        <item name="about_libraries_title_openSource">@color/textColorPrimary</item>
        <item name="about_libraries_text_openSource">@color/textColorSecondary</item>
        <item name="about_libraries_special_button_openSource">@color/about_libraries_special_button_openSource</item>
        <item name="about_libraries_dividerDark_openSource">@color/about_libraries_dividerDark_openSource</item>
        <item name="about_libraries_dividerLight_openSource">@color/about_libraries_dividerLight_openSource</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_dark_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_dark_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_dark_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_dark_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_dark_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_dark_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_dark_selected</item>
        <item name="material_drawer_selected_text">@color/material_drawer_dark_selected_text</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_dark_header_selection_text</item>

    </style>

    <!-- Base Light Theme -->
    <style name="PowerSwitchThemeBase.Light" parent="MaterialDrawerTheme.Light">
        <!-- material design -->
        <!-- MaterialDrawer -->
        <!-- ...and here we setting appcompat’s color theming attrs -->
        <item name="colorPrimaryDark">@color/primaryColor_darkInverse</item>
        <item name="colorPrimary">@color/primaryColorInverse</item>
        <item name="colorPrimaryLight">@color/primaryColor_lightInverse</item>
        <item name="colorAccent">#FF333333</item>
        <item name="android:windowBackground">@color/windowBackgroundInverse</item>

        <!-- custom views -->
        <item name="dialog_bottomBar_next_color">@color/textColorPrimaryInverse</item>
        <item name="button_backgroundDrawable">@drawable/button_shape_selector_light</item>
        <item name="cardview_backgroundColor">@color/cardview_backgroundInverse</item>

        <!-- text color -->
        <item name="android:textColorPrimary">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryInverse</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimary</item>
        <item name="android:textColorSecondaryInverse">@color/textColorSecondary</item>

        <!-- About Libraries -->
        <item name="about_libraries_window_background">@color/windowBackgroundInverse</item>
        <item name="about_libraries_card">@color/cardview_backgroundInverse</item>
        <item name="about_libraries_title_openSource">@color/textColorPrimaryInverse</item>
        <item name="about_libraries_text_openSource">@color/textColorSecondaryInverse</item>
        <item name="about_libraries_special_button_openSource">@color/about_libraries_special_button_openSource</item>
        <item name="about_libraries_dividerDark_openSource">@color/about_libraries_dividerDark_openSource</item>
        <item name="about_libraries_dividerLight_openSource">@color/about_libraries_dividerLight_openSource</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item>
        <item name="material_drawer_selected_text">@color/material_drawer_selected_text</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_header_selection_text</item>
    </style>

    <!-- Base Dark Blue -->
    <style name="PowerSwitchThemeBase.Dark.Blue" parent="PowerSwitchThemeBase.Dark">
        <item name="colorAccent">@color/accent_blue_a700</item>
        <item name="android:textColorLink">@color/accent_blue_a700</item>

        <!-- dialog -->
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyleDarkBlue</item>
    </style>

    <!-- Base Dark Red -->
    <style name="PowerSwitchThemeBase.Dark.Red" parent="PowerSwitchThemeBase.Dark">
        <item name="colorAccent">@color/accent_red_a700</item>
        <item name="android:textColorLink">@color/accent_red_a700</item>
    </style>

    <!-- Base Light Blue -->
    <style name="PowerSwitchThemeBase.Light.Blue" parent="PowerSwitchThemeBase.Light">
        <item name="colorAccent">@color/accent_blue_a700</item>
        <item name="android:textColorLink">@color/accent_blue_a700</item>

        <!-- dialog -->
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyleLightBlue</item>
    </style>

    <!-- Base Light Red -->
    <style name="PowerSwitchThemeBase.Light.Red" parent="PowerSwitchThemeBase.Light">
        <item name="colorAccent">@color/accent_red_a700</item>
        <item name="android:textColorLink">@color/accent_red_a700</item>
    </style>

    <!-- Themes -->
    <style name="PowerSwitchTheme.Dark.Blue" parent="PowerSwitchThemeBase.Dark.Blue"/>

    <style name="PowerSwitchTheme.Dark.Red" parent="PowerSwitchThemeBase.Dark.Red"/>

    <style name="PowerSwitchTheme.Light.Blue" parent="PowerSwitchThemeBase.Light.Blue"/>

    <style name="PowerSwitchTheme.Light.Red" parent="PowerSwitchThemeBase.Light.Red"/>

</resources>