<resources>

    <style name="standard_button">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="text_list_item_header">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">@dimen/font_title_size</item>
    </style>

    <style name="card_view_headline">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">@dimen/font_title_size</item>
    </style>

    <style name="sub_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="header_settings">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_title_size</item>
    </style>

    <style name="card_view" parent="CardView">
        <item name="cardBackgroundColor">?attr/cardview_backgroundColor</item>
        <item name="cardCornerRadius">@dimen/cardview_corner_radius</item>
        <item name="cardElevation">@dimen/cardview_elevation</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="room_on_off_buttons">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">?attr/button_backgroundDrawable</item>
    </style>

    <style name="scene_activate_button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">?attr/button_backgroundDrawable</item>
    </style>

    <style name="dialog_bottom_bar">

    </style>

    <style name="TreeNodeStyleCustom">
        <item name="android:paddingLeft">20dp</item>
        <!--<item name="android:showDividers">middle</item>-->
        <!--<item name="android:divider">@android:drawable/divider_horizontal_bright</item>-->
    </style>


    <style name="AppCompatAlertDialogStyleDarkBlue" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/color_light_blue_a700</item>
    </style>

    <style name="AppCompatAlertDialogStyleLightBlue" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/color_light_blue_a700</item>
    </style>

    <style name="AppCompatAlertDialogStyleDayNightBlue" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/color_light_blue_a700</item>
    </style>

    <style name="WizardPageTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="WizardPageDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>