<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="?attr/colorPrimary">

    <ImageButton
        android:id="@+id/imageButton_delete"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_delete_white_48dp"
        android:tint="@color/delete_color"/>

    <ImageButton
        android:id="@+id/imageButton_cancel"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_toLeftOf="@+id/imageButton_save"
        android:layout_toStartOf="@+id/imageButton_save"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:backgroundTint="?attr/colorPrimary"
        android:src="@drawable/ic_cancel_white_48dp"
        android:tint="@color/inactive_gray"/>

    <ImageButton
        android:id="@+id/imageButton_save"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:backgroundTint="?attr/colorPrimary"
        android:src="@drawable/ic_check_circle_white_48dp"
        android:tint="@color/active_green"/>

</RelativeLayout>