<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:windowSoftInputMode="adjustResize">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/dialog_margin_top">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/gateway_name_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ui_element_margin"
            android:layout_marginLeft="@dimen/ui_element_margin_double"
            android:layout_marginRight="@dimen/ui_element_margin_double"
            android:layout_marginTop="@dimen/ui_element_margin">

            <EditText
                android:id="@+id/txt_edit_gateway_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editText_height"
                android:hint="@string/hint_name"
                android:inputType="text"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/TextView_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_marginLeft="@dimen/ui_element_margin_double"
            android:layout_marginTop="@dimen/title_margin_top"
            android:text="@string/gateway_type"
            android:textColor="?attr/colorAccent"/>

        <Spinner
            android:id="@+id/spinner_gateway_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_element_height"
            android:layout_marginBottom="@dimen/ui_element_margin"
            android:layout_marginLeft="@dimen/ui_element_margin_double"
            android:layout_marginRight="@dimen/ui_element_margin_double"
            android:layout_marginTop="@dimen/ui_element_margin"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/gateway_address_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ui_element_margin"
            android:layout_marginLeft="@dimen/ui_element_margin_double"
            android:layout_marginRight="@dimen/ui_element_margin_double"
            android:layout_marginTop="@dimen/ui_element_margin">

            <EditText
                android:id="@+id/txt_edit_gateway_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editText_height"
                android:hint="@string/hint_url"
                android:inputType="textUri"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/gateway_port_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ui_element_margin_double"
            android:layout_marginLeft="@dimen/ui_element_margin_double"
            android:layout_marginRight="@dimen/ui_element_margin_double"
            android:layout_marginTop="@dimen/ui_element_margin">

            <EditText
                android:id="@+id/txt_edit_gateway_port"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editText_height"
                android:hint="@string/hint_port"
                android:inputType="number"
                android:maxLength="5"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>