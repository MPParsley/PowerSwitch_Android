<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp">

        <CheckBox
            android:id="@+id/checkBox_playStoreMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_double"
            android:text="Play Store Mode"/>

        <CheckBox
            android:id="@+id/checkBox_forceLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_double"
            android:text="Force Language"/>

        <Spinner
            android:id="@+id/spinner_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"/>

        <Button
            android:id="@+id/button_resetShowcases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_double"
            android:text="Reset Showcases (Tutorial)"/>


        <Button
            android:id="@+id/button_removeAllGeofences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_double"
            android:text="Remove all Geofences"/>

        <Button
            android:id="@+id/button_forceUnknownExceptionDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_double"
            android:text="Force &quot;Unknown Error&quot; Dialog"/>

        <Button
            android:id="@+id/button_forceUnhandledException"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_double"
            android:text="Force Unhandled Exception"/>

        <CheckBox
            android:id="@+id/checkBox_forceFabricEnabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_double"
            android:text="Force-Enable Fabric"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>