<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dialog_margin_top">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/room_name_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ui_element_margin">

        <EditText
            android:id="@+id/editText_room_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_element_height"
            android:ems="10"
            android:hint="@string/name">

            <requestFocus/>

        </EditText>

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/textView_order_title"
        style="@style/sub_header"
        android:layout_marginTop="@dimen/title_margin_top"
        android:layout_marginBottom="@dimen/title_margin_top"
        android:text="@string/order"
        android:layout_marginLeft="@dimen/title_margin_horizontal"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_list_of_receivers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <include layout="@layout/dialog_bottom_bar"/>

</LinearLayout>