<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <com.mikepenz.iconics.view.IconicsImageView
            android:id="@+id/imageView_success"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:elevation="4dp"
            android:visibility="gone"
            app:iiv_color="@color/active_green"
            app:iiv_icon="gmi-check-circle"/>

        <com.mikepenz.iconics.view.IconicsImageView
            android:id="@+id/imageView_error"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:elevation="4dp"
            android:visibility="gone"
            app:iiv_color="@color/red"
            app:iiv_icon="gmi-close-circle"/>

        <ProgressBar
            android:id="@+id/progressIndicator"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:indeterminate="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textView_statusMessage_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:maxLines="3"/>

    </LinearLayout>

    <TextView
        style="@style/sub_header"
        android:text="@string/total"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <com.daimajia.numberprogressbar.NumberProgressBar
            android:id="@+id/progressBar_main"
            style="@style/NumberProgressBar_Default"
            android:layout_marginTop="8dp"
            app:max="100"
            app:progress_text_size="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_subprocess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            style="@style/sub_header"
            android:text="@string/subprocess"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_statusMessage_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:maxLines="1"/>

            <com.daimajia.numberprogressbar.NumberProgressBar
                android:id="@+id/progressBar_sub"
                style="@style/NumberProgressBar_Default"
                app:max="100"
                app:progress_text_size="12dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>