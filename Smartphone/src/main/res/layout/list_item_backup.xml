<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/cardview_padding">

    <android.support.v7.widget.CardView
        style="@style/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    style="@style/sub_header"
                    android:text="@string/name"/>

                <TextView
                    android:id="@+id/txt_backup_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="18sp"/>

                <TextView
                    style="@style/sub_header"
                    android:layout_marginTop="8dp"
                    android:text="@string/date"/>

                <TextView
                    android:id="@+id/txt_backup_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="?android:textColorSecondary"/>

                <TextView
                    style="@style/sub_header"
                    android:layout_marginTop="8dp"
                    android:text="@string/size"/>

                <TextView
                    android:id="@+id/txt_backup_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="?android:textColorSecondary"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="?attr/colorPrimaryHalf">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:id="@+id/restore"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:elevation="4dp"
                    app:iiv_color="?android:textColorPrimary"
                    app:iiv_icon="gmd-restore"/>

                <com.mikepenz.iconics.view.IconicsImageView
                    android:id="@+id/share"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_below="@+id/restore"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:elevation="4dp"
                    app:iiv_color="?android:textColorPrimary"
                    app:iiv_icon="gmi-share"/>

                <com.mikepenz.iconics.view.IconicsImageView
                    android:id="@+id/delete"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:contentDescription="@string/delete"
                    android:elevation="4dp"
                    app:iiv_color="@color/delete_color"
                    app:iiv_icon="gmi-delete"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <include layout="@layout/list_footer"/>

</LinearLayout>
