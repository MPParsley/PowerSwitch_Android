<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/sub_header"
            android:layout_marginTop="@dimen/title_margin_top"
            android:gravity="bottom"
            android:paddingLeft="@dimen/dialog_horizontal_margin"
            android:text="@string/repeat_amount"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/button_minus"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="-"/>

            <TextView
                android:id="@+id/textView_repeatAmount"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:gravity="center"/>

            <Button
                android:id="@+id/button_plus"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="+"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:text="@string/associated_gateways_for_receiver_description"/>

        <CheckBox
            android:id="@+id/checkbox_use_custom_gateway_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/use_custom_gateway_selection"/>

        <LinearLayout
            android:id="@+id/roomGateways"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/sub_header"
                android:layout_marginTop="@dimen/title_margin_top"
                android:gravity="bottom"
                android:paddingLeft="@dimen/dialog_horizontal_margin"
                android:text="@string/room_gateways"/>

            <LinearLayout
                android:id="@+id/linearLayoutOfRoomGateways"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/apartmentGateways"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/sub_header"
                android:layout_marginTop="@dimen/title_margin_top"
                android:gravity="bottom"
                android:paddingLeft="@dimen/dialog_horizontal_margin"
                android:text="@string/apartment_gateways"/>

            <LinearLayout
                android:id="@+id/linearLayoutOfApartmentGateways"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/otherGateways"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/sub_header"
                android:layout_marginTop="@dimen/title_margin_top"
                android:gravity="bottom"
                android:paddingLeft="@dimen/dialog_horizontal_margin"
                android:text="@string/other_gateways"/>

            <LinearLayout
                android:id="@+id/linearLayoutOfOtherGateways"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>