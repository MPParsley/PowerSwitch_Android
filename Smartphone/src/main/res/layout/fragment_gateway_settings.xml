<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ScrollView_settings"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_list_of_gateways"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/padding"
            android:layout_marginTop="@dimen/padding"
            android:layout_weight="1"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/search_gateway_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_margin="16dp"
        android:src="@drawable/ic_autorenew_white_48dp"
        app:backgroundTint="?attr/colorAccent"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:fabSize="normal"
        app:layout_anchor="@id/recyclerview_list_of_gateways"
        app:layout_anchorGravity="bottom|left|end"
        app:layout_behavior="eu.power_switch.gui.animation.ScrollAwareFABBehavior"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_gateway_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_white_48dp"
        app:backgroundTint="?attr/colorAccent"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:fabSize="normal"
        app:layout_anchor="@id/recyclerview_list_of_gateways"
        app:layout_anchorGravity="bottom|right|end"
        app:layout_behavior="eu.power_switch.gui.animation.ScrollAwareFABBehavior"/>

</android.support.design.widget.CoordinatorLayout>